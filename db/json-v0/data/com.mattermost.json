{
    "info": {
        "id": "com.mattermost",
        "title": "Mattermost",
        "endoflife_date_id": "mattermost"
    },
    "binary": [
        {
            "path": "/opt/mattermost/bin/mattermost",
            "arguments": [
                "version"
            ],
            "regex": "^Version: (?<version>(?<cycle>(?<major>\\d+)\\.(?<minor>\\d+))\\.(?<patch>\\d+))"
        }
    ],
    "docker": {
        "image_name": "mattermost/mattermost-team-edition",
        "binary_path": "/mattermost/bin/mattermost",
        "arguments": [
            "version"
        ],
        "regex": "^Version: (?<version>(?<cycle>(?<major>\\d+)\\.(?<minor>\\d+))\\.(?<patch>\\d+))"
    }
}
